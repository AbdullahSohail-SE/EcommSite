@model Web.Models.ViewModels.ProductDetailViewModel
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="content">
        <div style="margin-left:50%;transform:translateX(-50%)" >
            <h2 class="py-4">ProductDetail</h2>

            <div class="row" style="width:576px">
                <div class="col-6">
                    <p class="text-teal">Title </p>
                    <p class="text-teal">Description </p>
                    <p class="text-teal">Category </p>
                    <p class="text-teal">Price </p>
                </div>
                <div class="col-6">
                    <p>@Model.name</p>
                    <p>@Model.description</p>
                    <p>@Model.category</p>
                    <p>Rs @Model.price</p>

                </div>
            </div>

        </div>

    </div>

